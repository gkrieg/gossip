
<h2>Hello, <%= id %>.</h2>
<% if (messages.length > 0) { %>
	<ul class="list-group">
	<% for (i in messages) { %>
		<li class='list-group-item'><%= messages[i].Rumor.Text %></li>
	<% } %>
	</ul>
<% } %>
<h1>Send a message!</h1>
<form action="/sendMessage" method='post'>
  <div class="form-group">
    <label for="message">Message</label>
    <input type="text" class="form-control" id="message" name="message" value="" placeholder="Anyone know a great taco place?">
  </div>
  <button type="submit" class="btn btn-default">Send Message</button>
</form>
